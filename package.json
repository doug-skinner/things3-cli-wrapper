{
  "name": "@dougskinner/thangs",
  "version": "0.1.0",
  "description": "A CLI wrapper around Things 3, built in TypeScript",
  "main": "dist/index.js",
  "bin": {
    "thangs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "dev": "npm run watch",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "keywords": [
    "things3",
    "cli",
    "task-manager",
    "todo",
    "typescript",
    "macos"
  ],
  "author": "Doug Skinner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dougskinner/things3-cli-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/dougskinner/things3-cli-wrapper/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "skill/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "run-applescript": "^7.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@biomejs/biome": "^1.4.1"
  }
}
